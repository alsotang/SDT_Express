<% @order.order_histories.build %>
<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :start_loc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_loc, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_loc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_loc, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_done, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_done, :class => 'check_box' %>
    </div>
  </div>

  <h3>包裹跟踪</h3>
  <%= render :partial => 'order_histories/form',
             :locals => {:form => f} %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
