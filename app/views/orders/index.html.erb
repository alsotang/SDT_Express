<h1>Listing orders</h1>

<table>
  <tr>
    <th>Start loc</th>
    <th>End loc</th>
    <th>Price</th>
    <th>Is done</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.start_loc %></td>
    <td><%= order.end_loc %></td>
    <td><%= order.price %></td>
    <td><%= order.is_done %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

